<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editTextGroupPaidName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Who Paid?"
        android:inputType="textPersonName"
        android:textAlignment="textStart" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextGroupTakerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="For whom?"
        android:inputType="textPersonName"
        android:textAlignment="textStart" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextGroupFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="For?" />

    <EditText
        android:id="@+id/editTextGroupDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DD/MM/YYYY"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextGroupAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonGroupTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Okay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

</LinearLayout>